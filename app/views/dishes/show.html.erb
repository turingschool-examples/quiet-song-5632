<h1><%= @dish.name %></h1>
<h3><%= @dish.name %>'s Description</h3>
<p><%=@dish.description%></p>
<h3>Ingredients used in this dish:</h3>
<%@dish.ingredients.each do |ingredient|%>
  <div id="ingredient-<%= ingredient.id%>">
  <ul>
    <li><%= ingredient.name %></li> 
  </ul>
  </div>
<% end %>
<p>Total calories: <%= @dish.total_calorie_count%>
<p>This dish was created by <%= @dish.chef.name %></p>

<%= form_with url: dish_path(@dish), method: :post, local: true, data: {turbo: false} do |form|%>
  <%= form.label :ingredient_id, "Add Ingredient" %>
  <%= form.number_field :ingredient_id %><br>
  <%= form.submit "Submit"%>
<% end %>